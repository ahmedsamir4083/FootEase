<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Organization Sign Up</title>
  <link rel="stylesheet" href="styles/orgSignup.css"> <!-- Link to your CSS file -->
  <link rel="manifest" href="/manifest.json">
</head>
<body>

  <!-- Navigation Bar -->
  <nav>
    <div class="container-logo">
        <img class="logo" src="/images/footease-logo.png" alt="">
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <section class="signup-container">
      <h2>Organization Sign Up</h2>
      <form action="/orgsignup" method="POST">
        <label for="orgName">Organization Name:</label>
        <input type="text" id="orgName" name="orgName" required>

        <div class="input-group">
          <label for="username">UserName</label>
          <input type="text" id="username" name="username" placeholder="Enter your username" required>
        </div>

        <div class="input-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>

        <label for="contactPerson">Contact Person:</label>
        <input type="text" id="contactPerson" name="contactPerson" required>

        <label for="contactEmail">Contact Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="phoneNumber">Phone Number:</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" required>

        <label for="orgType">Organization Type:</label>
        <select id="orgType" name="orgType" required>
          <option value="club">Club</option>
          <option value="academy">Academy</option>
          <option value="school">School</option>
          <option value="communityCenter">Community Center</option>
        </select>

        <label for="footballType">Football Type Provided:</label>
        <div class="checkbox-group">
          <input type="checkbox" id="blind" name="footballType" value="Blind">
          <label for="blind">Blind football</label>
          
          <input type="checkbox" id="partiallyBlind" name="footballType" value="Partially Blind">
          <label for="partiallyBlind">Partially blind football</label>
          
          <input type="checkbox" id="deaf" name="footballType" value="Deaf">
          <label for="deaf">Deaf football</label>
  
          <input type="checkbox" id="cerebralPalsy" name="footballType" value="Cerebral Palsy">
          <label for="cerebralPalsy">Cerebral palsy football</label>
  
          <input type="checkbox" id="amputee" name="footballType" value="Amputee">
          <label for="amputee">Amputee-football</label>
  
          <input type="checkbox" id="learningDisability" name="footballType" value="Learning Disability">
          <label for="learningDisability">Learning disability football</label>
  
          <input type="checkbox" id="powerchair" name="footballType" value="Powerchair">
          <label for="powerchair">Powerchair football</label>
        </div>

        <label for="TypesofFootballOpportunitiesProvided">Types of Football Opportunities Provided:</label>
        <div class="checkbox-group">
          <input type="checkbox" id="matches" name="TypesofFootballOpportunitiesProvided" value="matches">
          <label for="matches">matches</label>
          
          <input type="checkbox" id="tournaments" name="TypesofFootballOpportunitiesProvided" value="tournaments">
          <label for="tournaments">tournaments</label>

          <input type="checkbox" id="trainingSessions" name="TypesofFootballOpportunitiesProvided" value="trainingSessions">
          <label for="trainingSessions">trainingSessions</label>
        </div>

        <label for="location">Location:</label>
        <select id="location" name="location" required>
          <!-- Add options for UK cities -->
          <option value="london">London</option>
          <option value="manchester">Manchester</option>
          <!-- Add more cities as needed -->
        </select>

        <label for="Address">Address:</label>
        <input type="text" id="Address" name="Address" required>

        <label for="website">Website:</label>
        <input type="url" id="website" name="website">

        <label for="socialMediaLinks">Social Media Links:</label>
        <input type="text" id="socialMediaLinks" name="socialMediaLinks">

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4"></textarea>

    <label for="SkillLevels">Skill Levels :</label>
    <div class="checkbox-group">
      <input type="checkbox" id="beginner" name="SkillLevels" value="beginner">
      <label for="beginner">beginner</label>
      
      <input type="checkbox" id="intermediate" name="intermediate" value="intermediate">
      <label for="intermediate">intermediate</label>

      <input type="checkbox" id="advanced" name="SkillLevels" value="advanced">
      <label for="advanced">advanced</label>
    </div>

    <label for="AgeGroups">Skill Levels :</label>
    <div class="checkbox-group">
      <input type="checkbox" id="youth" name="AgeGroups" value="youth">
      <label for="youth">youth</label>
      
      <input type="checkbox" id="adults" name="AgeGroups" value="adults">
      <label for="adults">adults</label>

      <input type="checkbox" id="seniors" name="AgeGroups" value="seniors">
      <label for="seniors">seniors</label>
    </div>

        <button type="submit">Sign Up</button>
      </form>
    </section>
  </div>

  <!-- Footer -->
  <div class="site-footer">
    <div class="container">
      <p>&copy; 2024 Your Organization. All rights reserved.</p>
    </div>
  </div>

</body>
<script>
  if ('serviceWorker' in navigator) {
    window.addEventListener('load', () => {
      navigator.serviceWorker.register('/service-worker.js')
        .then((registration) => {
          console.log('Service Worker registered with scope:', registration.scope);
        })
        .catch((error) => {
          console.error('Service Worker registration failed:', error);
        });
    });
  }
</script>
</html>
