        <option value="Partially Blind">partially Blind</option>
        <option value="Deaf">deaf Football</option>
        <option value="Cerebral Palsy">cerebral Palsy</option>
        <option value="Amputee">amputee Football</option>
        <option value="Learning Disability">learning Disability Football</option>
        <option value="Powerchair">powerchair Football</option>
      </select>

      <label for="TypesofFootballOpportunitiesProvided">Types of Football Opportunities Provided:</label>
      <select id="TypesofFootballOpportunitiesProvided" name="TypesofFootballOpportunitiesProvided">
        <option value="">Any</option>
        <option value="matches">matches</option>
        <option value="tournaments">tournaments</option>
        <option value="trainingSessions">trainingSessions</option>
      </select>


      <label for="AgeGroups">Age Groups:</label>
      <select id="AgeGroups" name="AgeGroups">
        <option value="">Any</option>
        <option value="youth">youth</option>
        <option value="adults">adults</option>
        <option value="seniors">seniors</option>
      </select>


      <label for="level">Level of Play:</label>
      <select id="level" name="level">
        <option value="">Any</option>
        <option value="beginner">Beginner</option>
        <option value="intermediate">Intermediate</option>
        <option value="advanced">Advanced</option>
      </select>

      <button>Search</button>
      </form>

    


    </div>

    <div class="search-results">
      <!-- Search results will be displayed here -->
      <!-- Use JavaScript to populate this section with search results -->
    </div>
  </div>

  <script src="script.js"></script> <!-- Link to your JavaScript file -->
</body>

